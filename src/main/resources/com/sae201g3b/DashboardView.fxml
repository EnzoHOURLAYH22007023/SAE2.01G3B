<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" maxHeight="1080.0" maxWidth="1920.0" minHeight="720.0" minWidth="1280.0" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae201g3b.DashboardController">
    <top>
        <MenuBar>
            <Menu text="Fichier">
                <MenuItem text="Carte" onAction="#changerFXML"/>
                <SeparatorMenuItem/>
                <MenuItem text="Importer CSV" />
            </Menu>
            <Menu text="A propos.." />
        </MenuBar>
    </top>
    <center>
        <GridPane prefHeight="227.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <LineChart fx:id="lineChart" GridPane.columnIndex="1">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </LineChart>
                <BarChart>
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </BarChart>
              <HBox alignment="CENTER" prefHeight="136.0" prefWidth="600.0" spacing="50.0" GridPane.rowIndex="1">
                  <VBox alignment="CENTER">
                      <Label text="Nombre de tuple :" />
                      <Label fx:id="nbTuple" text="?" />
                  </VBox>
                  <VBox alignment="CENTER">
                      <Label text="AUTRE:" />
                      <Label text="?" />
                  </VBox>
                  <VBox alignment="CENTER">
                      <Label text="AUTRE :" />
                      <Label text="?" />
                  </VBox>
              </HBox>
            </children>
        </GridPane>
    </center>
    <right>
        <VBox>
            <Label text="Id:" />
            <TextField fx:id="id" promptText="Exp: 160001" />
            <Label text="Région:" />
            <TextField fx:id="region" promptText="Exp: Pyrenees Occidentales" />
            <Label text="Période" />
            <Label text="De:" />
            <TextField fx:id="de" promptText="Exp: JJ/MM/AAAA" />
            <Label text="Jusqu'a:" />
            <TextField fx:id="jusqua" promptText="Exp: JJ/MM/AAAA" />
            <Slider fx:id="intensite" majorTickUnit="1.0" max="12.0" minorTickCount="1" orientation="VERTICAL" prefHeight="250.0" prefWidth="40.0" showTickLabels="true" showTickMarks="true" />
            <Button onAction="#appliquer" text="Appliquer les changements" />
            <Button text="Réinitialiser" />
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
