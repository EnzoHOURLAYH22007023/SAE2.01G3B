<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<BorderPane fx:id="borderPane" maxHeight="1080.0" maxWidth="1920.0" minHeight="720.0" minWidth="1280.0" stylesheets="@SisApp.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae201g3b.DashboardController">
    <top>
        <MenuBar fx:id="MBar">
            <Menu fx:id="M" text="Fichier">
                <MenuItem onAction="#changerFXML" text="Carte" />
                <SeparatorMenuItem />
                <MenuItem text="Importer CSV" />
            </Menu>
            <Menu text="A propos.." />
        </MenuBar>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <BarChart title="AAAAA">
                <xAxis>
                    <CategoryAxis label="Année" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Année" side="LEFT" />
                </yAxis>
            </BarChart>
            <LineChart fx:id="lineChart" title="Intensité selon l'année" GridPane.columnIndex="1">
                <xAxis>
                    <CategoryAxis label="Année" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Intensité" side="LEFT" />
                </yAxis>
            </LineChart>
            <HBox alignment="CENTER" GridPane.rowIndex="1">
                <VBox alignment="CENTER" styleClass="solo">
                    <Label text="Intensité Max" />
                    <Label fx:id="nbTuple" text="?" />
                    <HBox.margin>
                       <Insets bottom="75.0" left="10.0" right="10.0" top="75.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER" styleClass="solo">
                    <Label text="Intensité Moy" />
                    <Label text="?" />
                    <HBox.margin>
                        <Insets bottom="75.0" left="10.0" right="10.0" top="75.0" />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER" styleClass="solo">
                    <Label text="Intensité Min" />
                    <Label text="?" />
                    <HBox.margin>
                        <Insets bottom="75.0" left="10.0" right="10.0" top="75.0" />
                    </HBox.margin>
                </VBox>
            </HBox>
            <MapView fx:id="regionCarte" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
    </center>
    <right>
        <HBox spacing="10">
            <VBox fx:id="Utilisateur" styleClass="vbox-filtre">
                <GridPane fx:id="GP" hgap="5.0" styleClass="gridpane-filtre" vgap="10.0" BorderPane.alignment="CENTER">
                    <Label fx:id="L1" text="Id:" />
                    <TextField fx:id="id" promptText="Exp: 160001" GridPane.columnIndex="1" />
                    <Label fx:id="L2" text="Région:" GridPane.rowIndex="1" />
                    <TextField fx:id="region" promptText="Exp: Pyrenees Occidentales" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label fx:id="L3" text="De:" GridPane.rowIndex="2" />
                    <TextField fx:id="de" promptText="Exp: AAAA/MM/JJ" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="L4" text="Jusqu'a:" GridPane.rowIndex="3" />
                    <TextField fx:id="jusqua" promptText="Exp: AAAA/MM/JJ" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Button fx:id="Appliquer" text="Appliquer les changements" GridPane.rowIndex="4" />
                    <Button fx:id="Reset" text="Réinitialiser" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <padding>
                    <Insets topRightBottomLeft="10.0" />
                </padding>
            </VBox>
            <RangeSlider fx:id="intensite" highValue="12.0" lowValue="0.0" max="12.0" styleClass="slider">
                <padding>
                    <Insets topRightBottomLeft="10.0" />
                </padding>
            </RangeSlider>
            <BorderPane.margin>
                <Insets bottom="50.0" left="20.0" right="20.0" top="50.0" />
            </BorderPane.margin>
        </HBox>
    </right>
</BorderPane>
