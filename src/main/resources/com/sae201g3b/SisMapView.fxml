<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" maxHeight="1080.0" maxWidth="1920.0" minHeight="720.0" minWidth="1280.0" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae201g3b.SisMapController">
    <top>
        <MenuBar>
            <Menu text="Fichier">
                <MenuItem text="Importer CSV" />
            </Menu>
            <Menu text="Carte" onAction="#"/>
            <Menu text="Dashboard" />
            <Menu text="A propos.." />
        </MenuBar>
    </top>
    <left>
        <VBox>
            <Button fx:id="btnCarte" onAction="#changeCenter" text="Carte" />
            <Button fx:id="btnTab" onAction="#changeCenter" text="Tableau" />
        </VBox>
    </left>
    <center>
        <TableView fx:id="tableau">
            <columns>
                <TableColumn fx:id="colonneId" text="Identifiant" />
                <TableColumn fx:id="colonneDate" text="Date" />
                <TableColumn fx:id="colonneHeure" text="Heure" />
                <TableColumn fx:id="colonneNom" text="Nom" />
                <TableColumn fx:id="colonneRegion" text="Region" />
                <TableColumn fx:id="colonneChoc" text="Choc" />
                <TableColumn fx:id="colonneLatitude" text="Latitude" />
                <TableColumn fx:id="colonneLongitude" text="Longitude" />
                <TableColumn fx:id="colonneIntensite" text="Intensité" />
                <TableColumn fx:id="colonneQualite" text="Qualité" />
            </columns>
        </TableView>
        <MapView fx:id="france" />
    </center>
    <right>
        <VBox prefHeight="675.0" prefWidth="173.0">
            <Label text="Id:" />
            <TextField promptText="Exp: 160001" />
            <Label text="Région:" />
            <TextField promptText="Exp: Pyrenees Occidentales" />
            <Label text="Période" />
            <Label text="De:" />
            <TextField promptText="Exp: JJ/MM/AAAA" />
            <Label text="Jusqu'a:" />
            <TextField promptText="Exp: JJ/MM/AAAA" />
            <Slider majorTickUnit="1.0" max="12.0" minorTickCount="1" orientation="VERTICAL" prefHeight="250.0" prefWidth="40.0" showTickLabels="true" showTickMarks="true" />
            <Button text="Appliquer les changements" />
            <Button onAction="#reset" text="Réinitialiser" />
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
