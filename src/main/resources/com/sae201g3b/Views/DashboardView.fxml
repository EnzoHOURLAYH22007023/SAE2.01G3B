<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<BorderPane fx:id="borderPane" maxHeight="1080.0" maxWidth="1920.0" minHeight="720.0" minWidth="1280.0" stylesheets="@../SisMap.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sae201g3b.ViewModels.DashboardController">
    <top>
        <MenuBar>
            <Menu text="Fichier">
                <MenuItem onAction="#changerFXMLMap" text="Carte" />
                <SeparatorMenuItem />
                <MenuItem text="Importer CSV" onAction="#changerFXMLImport"/>
            </Menu>
            <Menu text="A propos.." />
        </MenuBar>
    </top>
    <center>
        <GridPane prefHeight="227.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <LineChart fx:id="lineChart" GridPane.columnIndex="1">
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" />
                </yAxis>
            </LineChart>
            <BarChart>
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis side="LEFT" />
                </yAxis>
            </BarChart>
            <HBox alignment="CENTER" prefHeight="136.0" prefWidth="600.0" spacing="50.0" GridPane.rowIndex="1">
                <VBox alignment="CENTER">
                    <Label text="Nombre de tuple :" />
                    <Label fx:id="nbTuple" text="?" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="AUTRE:" />
                    <Label text="?" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label text="AUTRE :" />
                    <Label text="?" />
                </VBox>
            </HBox>
            <MapView fx:id="regionCarte" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
    </center>
    <right>
        <HBox spacing="10">
            <VBox styleClass="vbox-filtre">
                <GridPane hgap="5.0" styleClass="gridpane-filtre" vgap="10.0" BorderPane.alignment="CENTER">
                    <Label text="Id:" />
                    <TextField promptText="Exp: 160001" GridPane.columnIndex="1" />
                    <Label text="Région:" GridPane.rowIndex="1" />
                    <TextField promptText="Exp: Pyrenees Occidentales" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="De:" GridPane.rowIndex="2" />
                    <TextField promptText="Exp: AAAA/MM/JJ" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Jusqu'a:" GridPane.rowIndex="3" />
                    <TextField promptText="Exp: AAAA/MM/JJ" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Button onAction="#appliquerChangement" text="Appliquer les changements" GridPane.rowIndex="4" />
                    <Button onAction="#resetFiltreControlleur" text="Réinitialiser" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <padding>
                    <Insets topRightBottomLeft="10.0" />
                </padding>
            </VBox>
            <RangeSlider highValue="12.0" lowValue="0.0" max="12.0" styleClass="slider">
                <padding>
                    <Insets topRightBottomLeft="10.0" />
                </padding>
            </RangeSlider>
            <BorderPane.margin>
                <Insets bottom="50.0" left="20.0" right="20.0" top="50.0" />
            </BorderPane.margin>
        </HBox>
    </right>
</BorderPane>
